<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ItemDirectionsFragment">


    <TextView
        android:id="@+id/text_item_directions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_weight="6"
        android:textSize="@dimen/standardTextSize"
        android:layout_gravity="top"/>

    <Button
        android:id="@+id/button_open_gmaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_maps"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_gmaps"/>


</LinearLayout>