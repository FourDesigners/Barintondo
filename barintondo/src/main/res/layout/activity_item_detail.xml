<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/itemDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="40dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_star" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/itemDetailImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryBlueVariant"
            android:text="@string/pref_header_info"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_directions"/>

        <Button
            android:id="@+id/item_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryBlueVariant"
            android:text="@string/strIndicazioni"
            android:textColor="@android:color/background_light"
            android:padding="10dp"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/item_info"
            app:layout_constraintBottom_toBottomOf="@id/item_info"
            app:layout_constraintStart_toEndOf="@id/item_info"
            app:layout_constraintEnd_toStartOf="@id/item_reviews"/>

        <Button
            android:id="@+id/item_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/colorSecondaryBlueVariant"
            android:text="@string/strRecensioni"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/item_info"
            app:layout_constraintBottom_toBottomOf="@id/item_info"
            app:layout_constraintStart_toEndOf="@id/item_directions"
            app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/item_extra_container">


    </FrameLayout>


</android.support.v7.widget.LinearLayoutCompat>