<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding">

    <!-- Attraction id - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/notDefined" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toEndOf="@+id/cod"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sottoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/notDefined"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <TextView
        android:id="@+id/stato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="@+id/sottoCat"
        app:layout_constraintStart_toEndOf="@+id/sottoCat"
        app:layout_constraintTop_toTopOf="@+id/sottoCat" />

    <TextView
        android:id="@+id/valutazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/stato"
        app:layout_constraintStart_toEndOf="@+id/stato"
        app:layout_constraintTop_toTopOf="@+id/stato" />

</android.support.constraint.ConstraintLayout>