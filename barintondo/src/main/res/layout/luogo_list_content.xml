<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding"
    android:paddingRight="@dimen/activity_margin"
    android:paddingBottom="@dimen/row_padding">

    <!-- Attraction id - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/notDefined"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toTopOf="@+id/thumbnail" />

    <!--ImageView visualizzata solo nella lista degli interessi-->
    <ImageView
        android:id="@+id/icon_categoria"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nome"
        app:layout_constraintBottom_toBottomOf="@id/nome"/>

    <TextView
        android:id="@+id/sottoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:text="@string/notDefined"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nome"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <TextView
        android:id="@+id/stato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        app:layout_constraintBottom_toBottomOf="@+id/sottoCat"
        app:layout_constraintStart_toEndOf="@+id/sottoCat"
        app:layout_constraintTop_toTopOf="@+id/sottoCat" />

    <TextView
        android:id="@+id/valutazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/notDefined"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/stato"
        app:layout_constraintStart_toEndOf="@+id/stato"
        app:layout_constraintTop_toTopOf="@+id/stato" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cod"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>