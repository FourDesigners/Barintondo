<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuogoDescriptionFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/luogo_table_orari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:stretchColumns="2">

            <TableRow android:paddingBottom="10dp">

                <TextView
                    android:layout_gravity="right"
                    android:text="@string/strOpening"
                    android:textSize="@dimen/mediumTextSize" />

                <TextView
                    android:id="@+id/text_orario_a"
                    android:layout_gravity="right"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/mediumTextSize" />
            </TableRow>

            <TableRow>

                <TextView
                    android:gravity="left"
                    android:text="@string/strClosing"
                    android:textSize="@dimen/mediumTextSize" />

                <TextView
                    android:id="@+id/text_orario_c"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/mediumTextSize" />
            </TableRow>
        </TableLayout>

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Descrizione"
            android:textSize="@dimen/mediumTextSize" />


    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>