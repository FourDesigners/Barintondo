<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuogoDescriptionFragment"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:stretchColumns="2">

        <TableRow android:paddingBottom="10dp">

            <TextView
                android:text="@string/strOpening"
                android:layout_gravity="right"
                android:textSize="@dimen/standardTextSize" />

            <TextView
                android:id="@+id/text_orario_a"
                android:layout_gravity="right"
                android:paddingLeft="5dp"
                android:textSize="@dimen/standardTextSize" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="@string/strClosing"
                android:gravity="left"
                android:textSize="@dimen/standardTextSize" />

            <TextView
                android:id="@+id/text_orario_c"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textSize="@dimen/standardTextSize" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/standardTextSize" />


</android.support.v7.widget.LinearLayoutCompat>